{
    "manifest_version": 3,
    "name": "PageRefresh",
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "src/background/background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon.png"
        },
        "default_popup": "src/popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "file://*"
            ],
            "css": [
                "library/picnic/picnic.min.css"
            ]
        }
    ]
}